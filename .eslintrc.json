{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "standard",
        "plugin:prettier/recommended",
        "plugin:jest/style"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier",
        "jest"
    ],
    "rules": {
        "camelcase": "off",
        "prettier/prettier":[
            "error",
            {
              "singleQuote": true,
              "semi": true,
              "trailingComma": "all",
              "arrowParens": "avoid"
            }
        ]
    }
}
